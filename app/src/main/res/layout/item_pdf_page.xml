<?xml version="1.0" encoding="utf-8"?>
<com.example.leggo.ZoomLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/zoomLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <!-- Pagina Sinistra (o unica in portrait) -->
        <FrameLayout
            android:id="@+id/leftPageContainer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/pageImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter" />

            <com.example.leggo.HighlightView
                android:id="@+id/highlightView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <!-- Divisore (visibile solo in landscape) -->
        <View
            android:id="@+id/pageSeparator"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#FF000000"
            android:visibility="gone"/>

        <!-- Pagina Destra (visibile solo in landscape) -->
        <FrameLayout
            android:id="@+id/rightPageContainer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone">

            <ImageView
                android:id="@+id/pageImageViewRight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter" />

            <com.example.leggo.HighlightView
                android:id="@+id/highlightViewRight"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

    </LinearLayout>
</com.example.leggo.ZoomLayout>