<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reading_settings"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <!-- Lingua Applicazione -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_language"
        android:textSize="16sp" />
    <Spinner
        android:id="@+id/spinnerAppLang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"/>

    <!-- Lingua Lettura Vocale -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tts_lang"
        android:textSize="16sp" />
    <Spinner
        android:id="@+id/spinnerTtsLang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnSystemTtsSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gestisci voci di sistema"
        android:textSize="12sp"
        android:layout_gravity="end"
        android:layout_marginBottom="16dp" />

    <!-- Dimensione Testo -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/font_size"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tvTextSizeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14sp"
            android:textSize="16sp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <SeekBar
        android:id="@+id/sbTextSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="6" 
        android:min="0"
        android:progress="0"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"/>

    <!-- VelocitÃ  Lettura -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tts_speed"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tvTtsSpeedValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x1.0"
            android:textSize="16sp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <SeekBar
        android:id="@+id/sbTtsSpeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="4" 
        android:min="0"
        android:progress="1"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"/>

    <!-- Tema Lettura -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reader_theme"
        android:textSize="16sp" />
    <Spinner
        android:id="@+id/spinnerReaderTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>

</LinearLayout>